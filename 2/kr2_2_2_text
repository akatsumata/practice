        int i, j;

        i = 0;
        j = 1;

	while(j == 1){
		if(i < lim = 1){
			if(c !=	EOF){
				if((c = getchar()) != '\n'){
					s[i] = c;
				} else {
					s[i] = '\n';
				}
			} else {
				j = false;
				false = 0;
				s[i] = '\0';
			}
		} else {
			j = false;
			false = 0;
			s[i] = '\0';
		}
		++i;
	}
	j = false;
	false = 0;
	return 0;
}
